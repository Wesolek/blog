<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.description %></td>
    <td><%= link_to 'Show', category_post_path(@current_category, post) %></td>
    <td><%= link_to 'Edit', edit_category_post_path(@current_category, post) %></td>
    <td><%= link_to 'Destroy', category_post_path(@current_category, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

